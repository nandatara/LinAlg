\end{eqnarray*}

\end_inset

Now:
\end_layout

\begin_layout Standard
1: extract the factor 
\begin_inset Formula $x_{1}-x_{i}$
\end_inset

 from each row 
\begin_inset Formula $2\le i\le n$
\end_inset


\end_layout

\begin_layout Standard
2: extract the factor 
\begin_inset Formula $\dfrac{1}{x_{1}+y_{j}}$
\end_inset

 from each column 
\begin_inset Formula $2\le j\le n$
\end_inset

.
\begin_inset Formula 
\begin{eqnarray*}
{\displaystyle D_{n}=\left({\prod_{i\mathop=1}^{n}\frac{1}{x_{i}+y_{1}}}\right)\left({\prod_{j\mathop=1}^{n}\frac{1}{x_{1}+y_{j}}}\right)\left({\prod_{i\mathop=2}^{n}\left(x_{1}-x_{i}\right)}\right)\left({\prod_{j\mathop=2}^{n}\left(y_{1}-y_{j}\right)}\right)}\\
\begin{vmatrix}1 & 1 & 1 & \cdots & 1\\
0 & \dfrac{1}{x_{2}+y_{2}} & \dfrac{1}{x_{2}+y_{3}} & \cdots & \dfrac{1}{x_{2}+y_{n}}\\
